<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Back Button Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <!-- Back Icon -->
        <ImageView
            android:id="@+id/doneButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back_icon"
            android:contentDescription="@string/back_to_pantry"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <!-- Back Text -->
        <TextView
            android:id="@+id/back_to_pantry_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_to_pantry"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_toEndOf="@id/doneButton"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp" />
    </RelativeLayout>

    <!-- Input Section -->
    <EditText
        android:id="@+id/searchQueryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_ingredient_name"
        android:layout_marginBottom="16dp" />

    <!-- Search Button -->
    <Button
        android:id="@+id/searchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:layout_marginBottom="16dp" />

    <!-- Search Results Section -->
    <TextView
        android:id="@+id/searchResultsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/results_will_appear_here"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Error Message Section -->
    <TextView
        android:id="@+id/errorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone"
        android:text="@string/error_invalid_search_query"
        android:paddingTop="8dp"
        android:layout_marginBottom="16dp" />

</LinearLayout>
