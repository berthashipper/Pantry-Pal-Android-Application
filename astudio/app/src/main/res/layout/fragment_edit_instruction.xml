<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Back to Recipe Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <!-- Back Icon -->
        <ImageView
            android:id="@+id/backToRecipeButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back_icon"
            android:contentDescription="Back to Recipe"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <!-- Back Text -->
        <TextView
            android:id="@+id/back_to_recipe_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Recipe"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_toEndOf="@id/backToRecipeButton"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp" />
    </RelativeLayout>

    <!-- Instruction Input -->
    <EditText
        android:id="@+id/instructionEditText"
        android:hint="New Instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Add Button -->
    <Button
        android:id="@+id/addButton"
        android:text="Add Instruction"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_height="wrap_content" />

    <!-- Edit Button -->
    <Button
        android:id="@+id/editButton"
        android:text="Edit Instruction"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_height="wrap_content" />

    <!-- Done Button -->
    <Button
        android:id="@+id/doneButton"
        android:text="@string/done"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />

    <!-- Error Message -->
    <TextView
        android:id="@+id/errorText"
        android:textColor="#FF0000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
