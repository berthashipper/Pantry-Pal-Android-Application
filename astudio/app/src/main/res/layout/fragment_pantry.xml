<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PantryFragment">

    <!-- TextView to display pantry contents -->
    <TextView
        android:id="@+id/pantryContentsTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pantry Contents:"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- EditText for Ingredient Name -->
    <EditText
        android:id="@+id/ingredientNameEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ingredient Name"
        app:layout_constraintTop_toBottomOf="@id/pantryContentsTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_margin="16dp" />

    <!-- EditText for Ingredient Quantity -->
    <EditText
        android:id="@+id/ingredientQuantityEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Quantity"
        app:layout_constraintTop_toBottomOf="@id/ingredientNameEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <!-- EditText for Ingredient Unit -->
    <EditText
        android:id="@+id/ingredientUnitEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Unit (e.g., grams)"
        app:layout_constraintTop_toBottomOf="@id/ingredientQuantityEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <!-- Button to Add Ingredient -->
    <Button
        android:id="@+id/addButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Ingredient"
        app:layout_constraintTop_toBottomOf="@id/ingredientUnitEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <!-- Button to Show Pantry Contents -->
    <Button
        android:id="@+id/showPantryButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Show Pantry"
        app:layout_constraintTop_toBottomOf="@id/addButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
