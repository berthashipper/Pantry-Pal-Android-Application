<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Back to Recipe Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <!-- Back Icon -->
        <ImageView
            android:id="@+id/backToRecipeButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back_icon"
            android:contentDescription="Back to Recipe"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <!-- Back Text -->
        <TextView
            android:id="@+id/back_to_recipe_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Recipe"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_toEndOf="@id/backToRecipeButton"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp" />
    </RelativeLayout>

    <!-- Edit Ingredients Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Ingredients in Recipe:"
        android:layout_marginBottom="8dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Ingredient Name Input -->
    <EditText
        android:id="@+id/itemNameText"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:hint="@string/ingredient_name" />

    <!-- Ingredient Quantity Input -->
    <EditText
        android:id="@+id/itemQuantityText"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="@string/new_quantity"
        android:inputType="numberDecimal" />

    <!-- Edit Button -->
    <Button
        android:id="@+id/editButton"
        android:text="@string/edit_ingredient"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />

    <!-- Done Button -->
    <Button
        android:id="@+id/doneButton"
        android:text="@string/done"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />
</LinearLayout>
