<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="#f9f9f9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Recipe Name -->
        <TextView
            android:id="@+id/recipe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <!-- Recipe Description -->
        <TextView
            android:id="@+id/recipe_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"
            android:lineSpacingExtra="4dp" />

        <!-- Cook Time -->
        <TextView
            android:id="@+id/recipe_cook_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#888888"
            android:layout_marginTop="12dp" />

        <!-- Serving Size -->
        <TextView
            android:id="@+id/recipe_serving_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#888888"
            android:layout_marginTop="8dp" />

        <!-- Ingredients Section -->
        <TextView
            android:id="@+id/ingredients_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="16dp" />

    <LinearLayout
        android:id="@+id/buttonsRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:weightSum="4">
        <Button
            android:id="@+id/edit_recipe_ingredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_weight="1"
            android:textSize="12sp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center"/>


        <Button
            android:id="@+id/add_recipe_ingredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:layout_weight="1"
            android:textSize="12sp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/delete_recipe_ingredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_weight="1"
            android:textSize="12sp"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center" />

    </LinearLayout>


        <LinearLayout
            android:id="@+id/ingredients_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp" />



        <!-- Instructions Section -->
        <TextView
            android:id="@+id/instructions_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instructions"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="16dp" />


        <Button
            android:id="@+id/edit_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:layout_marginTop="20dp"

            android:layout_gravity="center"/>


        <LinearLayout
            android:id="@+id/instructions_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/recipe_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#666666"
                android:lineSpacingExtra="6dp"/>
        </LinearLayout>

        <!-- Buttons Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="16dp">

            <!-- Back Icon -->
            <ImageView
                android:id="@+id/done_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back_icon"
                android:contentDescription="Back to Cookbook"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <!-- Back Text -->
            <TextView
                android:id="@+id/doneButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back to Cookbook"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_toEndOf="@id/done_button"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp" />

            <!-- Scale Icon -->
            <ImageView
                android:id="@+id/scale_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/scale_icon"
                android:contentDescription="Scale Recipe"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

            <!-- Scale Text -->
            <TextView
                android:id="@+id/scaleButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scale Recipe"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_toStartOf="@id/scale_button"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>
