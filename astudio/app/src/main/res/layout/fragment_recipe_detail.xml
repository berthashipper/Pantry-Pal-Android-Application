<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="#f9f9f9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Back and Scale Buttons Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <!-- Back Icon -->
            <ImageView
                android:id="@+id/done_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back_icon"
                android:contentDescription="Back to Cookbook"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <!-- Back Text -->
            <TextView
                android:id="@+id/doneButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back to Cookbook"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_toEndOf="@id/done_button"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp" />

            <!-- Scale Icon -->
            <ImageView
                android:id="@+id/scale_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/scale_icon"
                android:contentDescription="Scale Recipe"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

            <!-- Scale Text -->
            <TextView
                android:id="@+id/scaleButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scale Recipe"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_toStartOf="@id/scale_button"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp" />

        </RelativeLayout>


        <!-- Recipe Name -->
        <TextView
            android:id="@+id/recipe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <!-- Recipe Description -->
        <TextView
            android:id="@+id/recipe_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"
            android:lineSpacingExtra="4dp" />

        <!-- Cook Time -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <TextView
                android:id="@+id/recipe_cook_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#888888"
                android:layout_weight="1" />
            <ImageView
                android:id="@+id/edit_cook_time"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/edit_icon"
                android:contentDescription="Edit Cook Time"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true" />
        </LinearLayout>

        <!-- Serving Size -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/recipe_serving_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#888888"
                android:layout_weight="1" />
            <ImageView
                android:id="@+id/edit_serving_size"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/edit_icon"
                android:contentDescription="Edit Yield"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true" />
        </LinearLayout>


        <!-- Ingredients Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <!-- Ingredients Header -->
            <TextView
                android:id="@+id/ingredients_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredients"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <!-- Delete Icon -->
            <ImageView
                android:id="@+id/delete_recipe_ingredient"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/delete_icon"
                android:contentDescription="Delete Ingredients"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp" />

            <!-- Edit Icon -->
            <ImageView
                android:id="@+id/edit_recipe_ingredient"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/edit_icon"
                android:contentDescription="Edit Ingredients"
                android:layout_toStartOf="@id/delete_recipe_ingredient"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp" />

            <!-- Add Icon -->
            <ImageView
                android:id="@+id/add_recipe_ingredient"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/upload_icon"
                android:contentDescription="Add Ingredients"
                android:layout_toStartOf="@id/edit_recipe_ingredient"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ingredients_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp" />


        <!-- Instructions Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <!-- Instructions Header -->
            <TextView
                android:id="@+id/instructions_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instructions"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp" />

            <!-- Edit Icon -->
            <ImageView
                android:id="@+id/edit_instruction"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/edit_icon"
                android:contentDescription="Edit Instructions"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/instructions_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/recipe_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#666666"
                android:lineSpacingExtra="6dp" />
        </LinearLayout>

        <!-- Tags Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <!-- Tags Header -->
            <TextView
                android:id="@+id/tags_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tags"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp" />

            <!-- Add Icon -->
            <ImageView
                android:id="@+id/addTagButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/upload_icon"
                android:contentDescription="Add Tags"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/tagsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:gravity="start|center_vertical"
            android:paddingStart="0dp"
            android:paddingEnd="16dp">

            <!-- The tags will be dynamically added here -->
        </LinearLayout>
    </LinearLayout>
</ScrollView>
